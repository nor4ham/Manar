    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         

 String id =  JOptionPane.showInputDialog(this,"Enter Course ID");
       String delete = "Delete From COURSES WHERE COURSEID = ? ;";
      String deletet = "Delete From TASKS WHERE COURSE = ? ;";
      String deletetm = "Delete From MATERIALS WHERE COURSE = ? ;";
        try   {
              preparedstatement = connection.prepareStatement(deletet);
       preparedstatement.setString(1,id);
                  preparedstatement.execute(); 
                    preparedstatement = connection.prepareStatement(deletetm);
       preparedstatement.setString(1,id);
                  preparedstatement.execute(); 
  preparedstatement = connection.prepareStatement(delete);
       preparedstatement.setString(1,id);
                  preparedstatement.execute(); 
        }

     catch (SQLException sqlEx) 
        {
            JOptionPane.showMessageDialog(this, sqlEx.getMessage());
        }
        



    }                                        


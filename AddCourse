            resultSet = statement.executeQuery(query);
           resultSet.moveToInsertRow();
            resultSet.updateString("COURSEID",cid);
            resultSet.updateString("COURSENAME", cname);
            resultSet.updateString("INFORMATION",cinfo);
            resultSet.updateInt("Level",clevel);
            resultSet.updateString("TIME",ctime);
         
         
             resultSet.updateString("USERNAMET",user);
            resultSet.insertRow();

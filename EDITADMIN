    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
      try {
query="update  ADMINS set USERNAME=?,FIRSTNAME=?,LASTNAME=?,PASSWORD=? where USERNAME=?;";
   preparedstatement= connection.prepareStatement(query);   
 preparedstatement.setString(1, jTextField1.getText());
  preparedstatement.setString(2, jTextField2.getText());
    preparedstatement.setString(3, jTextField3.getText());

  String password =new String(jPasswordField1.getPassword());  
  int PASSSWORD =Integer.parseInt(password);;
  preparedstatement.setInt(4, PASSSWORD);
  preparedstatement.setString(5, user);
preparedstatement.execute();
 
            JOptionPane.showMessageDialog(this, "Record saved.");
            
        } catch (SQLException sqlEx) {
            JOptionPane.showMessageDialog(this, sqlEx.getMessage());
        }
    }                                        


  private void doConnect() {
      Security SecurityConnection = new Security();
        try {
connection = SecurityConnection.connect();
} catch (SQLException sqlEx) {
       JOptionPane.showMessageDialog(this, sqlEx.getMessage());

        }
  try {
       query=" select * from now";
         preparedstatement= connection.prepareStatement(query); 
              r = preparedstatement.executeQuery(query);
              r.next();
              user =r.getString("user"); 
   }     catch (SQLException sqlEx) {
       JOptionPane.showMessageDialog(this, sqlEx.getMessage());

        }      
          
          try{ 
              
              
             query= "SELECT * FROM teacheres WHERE USERNAME=?;";
        PreparedStatement p = connection.prepareStatement(query);
      p.setString(1, user);
 
        resultSet = p.executeQuery();
        resultSet.next();
        jTextField1.setText(resultSet.getString("FIRSTNAME"));
        jTextField2.setText(resultSet.getString("LASTNAME"));
        jTextField3.setText(resultSet.getString("EMAIL"));
        jTextField4.setText(resultSet.getString("PASSWORD"));
        jTextField5.setText(resultSet.getString("SITE"));
      jTextArea1.setText(resultSet.getString("INFORMATION"));

       }//end of try
       
       catch(SQLException ex){ JOptionPane.showMessageDialog(this, ex.getMessage());}
    }

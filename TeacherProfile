    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

       String fname = jTextField1.getText();
       String lname = jTextField2.getText();
       String email = jTextField3.getText();
       String password = jTextField4.getText();
       String site = jTextField5.getText();
      String inf =  jTextArea1.getText();
       String update = "UPDATE teacheres SET FIRSTNAME = ? ,LASTNAME = ? ,EMAIL = ? ,PASSWORD = ? ,SITE = ? ,INFORMATION=?"
               + "WHERE USERNAME = ?;";
       try{
       p = connection.prepareStatement(update);
       p.setString(1,fname);
       p.setString(2,lname);
       p.setString(3,email);
       p.setString(4,password);
       p.setString(5,site);
        p.setString(6,inf); 
       p.setString(7,user); //Nora put username
       p.executeUpdate();
       JOptionPane.showMessageDialog(this,"Profile Is Updated Successfully");
       }
       catch(SQLException ex){ JOptionPane.showMessageDialog(this, ex.getMessage());}

       
    }                                        


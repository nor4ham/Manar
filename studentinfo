    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       try{
            query = "SELECT * FROM  students";
            statement = connection.createStatement();
    resultSet = statement.executeQuery(query); 
    while (resultSet.next()) { 
        String USER = resultSet.getString("USERNAME"); 
        String GENDER = resultSet.getString("GENDER"); 
        String FN = resultSet.getString("FIRSTNAME"); 
        String LN = resultSet.getString("LASTNAME"); 
        String EMAIL = resultSet.getString("EMAIL"); 
        String CN = resultSet.getString("COLLEGENAME");
         String IC = resultSet.getString("INTRESTEDCOURSE");
          String L = resultSet.getString("LEVEL");
           String PS = resultSet.getString("PASSWORD");
         
         
      
        String Object[] ={USER, GENDER, FN, LN, EMAIL,CN,IC,L,PS };
         DefaultTableModel model 
    = (DefaultTableModel)jTable1.getModel(); 
        model.addRow(Object);
       
      }}// end of try
        catch (SQLException sqlEx) {
JOptionPane.showMessageDialog(this,"not SHOW  "+sqlEx.getMessage());
            
       
 
                                              
    }                                        
    }                                        


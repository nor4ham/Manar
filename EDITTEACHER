    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
  
  try{
      query="update  teacheres set USERNAME=?,FIRSTNAME=?,LASTNAME=?,GENDER=?,EMAIL=?,PASSWORD=?,SPECIALIZATION=?,INFORMATION=?,SITE=? where USERNAME=?;";
   preparedstatement= connection.prepareStatement(query);   
 preparedstatement.setString(1, jTextField5.getText());
    preparedstatement.setString(2, jTextField1.getText());
      preparedstatement.setString(3, jTextField2.getText());  
  preparedstatement.setString(4, jComboBox2.getSelectedItem().toString());
 preparedstatement.setString(5, jTextField3.getText());
   String password =new String(jPasswordField1.getPassword());  
  int PASSSWORD =Integer.parseInt(password);;
  preparedstatement.setInt(6, PASSSWORD);
  preparedstatement.setString(7, jComboBox1.getSelectedItem().toString());
    preparedstatement.setString(8, jTextArea1.getText());
    preparedstatement.setString(9, jTextField4.getText());
    preparedstatement.setString(10, jTextField5.getText());
preparedstatement.execute();
           JOptionPane.showMessageDialog(this, "Record has been updated in the table successfully");
        } catch (SQLException excep) {
          JOptionPane.showMessageDialog(this, ""+excep);
        }

           
    }                                        


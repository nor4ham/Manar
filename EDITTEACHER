    private void jTextField3ActionPerformed(java.awt.event.ActionEvent evt) {                                            
      if( isValid(jTextField3.getText())==false)
           jLabel8.setText("wrong format try again");
      else if( isValid(jTextField3.getText())==true)
           jLabel8.setText("good");
    }                                           

    private void jPasswordField2ActionPerformed(java.awt.event.ActionEvent evt) {                                                
         String s =Arrays.toString(jPasswordField1.getPassword());
          String a =Arrays.toString(jPasswordField2.getPassword());
       
     if( s == null ? a != null : !s.equals(a))
             jLabel18.setText("passowrd not match");
     else if (s == null ? a == null : s.equals(a))
          jLabel18.setText("passowrd match");
        
    }                                               

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    new teacherinfo().setVisible(true);
     this.dispose();
    }                                        

   
   static boolean isValid(String email) {
      String regex = "^[\\w-_\\.+]*[\\w-_\\.]\\@([\\w]+\\.)+[\\w]+[\\w]$";
      return email.matches(regex);
   }

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
String cid = jTextField2.getText();
        String ctask = jTextArea1.getText();
        String clink = jTextField1.getText();
        String update= "INSERT INTO TASKS VALUES (?,?,?);";
        

         try
        {
    

            PreparedStatement preparedstatement = connection.prepareStatement(update);
            preparedstatement.setString(3,ctask);
            preparedstatement.setString(1,cid);
            preparedstatement.setString(2,clink);
            preparedstatement.execute();
            preparedstatement.close();
 
            JOptionPane.showMessageDialog(this, "Task added successfully");
        }
        catch (SQLException ex)
        {
            JOptionPane.showMessageDialog(this,"Task not added successfully "+ ex.getMessage());
        }
        
       
       
    }                                        


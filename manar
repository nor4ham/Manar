    public void doConnect() {
        Security SecurityConnection = new Security();
        try {

            connection = SecurityConnection.connect();

        } catch (SQLException sqlEx) {
            JOptionPane.showMessageDialog(this, sqlEx.getMessage());

        }
        try {
            query = " select * from now";
            preparedstatement = connection.prepareStatement(query);
            r = preparedstatement.executeQuery(query);
            r.next();
            user = r.getString("user");
        } catch (SQLException sqlEx) {
            JOptionPane.showMessageDialog(this, sqlEx.getMessage());

        }

        try {
            
             query="SELECT * FROM ADMINS WHERE USERNAME=?;";
  p = connection.prepareStatement(query);
  p.setString(1, user);
resultSet = p.executeQuery(); 
    resultSet.next(); 
        String USER = resultSet.getString("USERNAME");
        jLabel5.setText(USER);
        String PS = resultSet.getString("PASSWORD");
        jLabel11.setText(PS);
          String FN = resultSet.getString("FIRSTNAME");
            jLabel6.setText(FN);
            String LN = resultSet.getString("LASTNAME");
              jLabel7.setText(LN);
              }
        catch (SQLException sqlEx) {
            JOptionPane.showMessageDialog(this, sqlEx.getMessage());

        }

    }


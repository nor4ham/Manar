              public void doConnect() {
 Security SecurityConnection = new Security();
        try {
connection = SecurityConnection.connect();
 // statement = connection.createStatement(ResultSet.TYPE_SCROLL_SENSITIVE, ResultSet.CONCUR_UPDATABLE);
        } catch (SQLException sqlEx) {
       JOptionPane.showMessageDialog(this, sqlEx.getMessage());

        }
           
        try {
       query=" select * from now";
         preparedstatement= connection.prepareStatement(query); 
              r = preparedstatement.executeQuery(query);
              r.next();
              user =r.getString("user"); 
   }
 catch (SQLException sqlEx) {
System.out.println(sqlEx.getMessage());} 
            
try 
        {
            jList1.setModel(model);
query = "select * from COURSES WHERE USERNAMET=?;";

              preparedstatement= connection.prepareStatement(query); 
              preparedstatement.setString(1,user);
              if(preparedstatement.execute()==true){
             resultSet = preparedstatement.executeQuery();
            while(resultSet.next()){
           model.addElement("ID : "+resultSet.getString("COURSEID")); }}

            
        }
        
   catch (SQLException sqlEx) 
        {
            JOptionPane.showMessageDialog(this, sqlEx.getMessage());
        }
              }
